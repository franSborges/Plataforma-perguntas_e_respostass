  <div class="container">
    <div class="card" id="form-questions">
      <div class="card-header">
        <h1>Realizar pergunta</h1>
      </div>
      <div class="card-body">
    <form method="POST" action="/save-question">
      <label>Titulo</label>
       <input type="text" placeholder="Titulo" class="form-control" name="title">
       <br>
        <label>Descrição</label>
       <textarea placeholder="Descreva sua pergunta aqui" class="form-control" name="description"></textarea>
       <br>
       <button class="btn btn btn-primary">Perguntar</button>
    </form>
      </div>
    </div>
  </div>
</body>
